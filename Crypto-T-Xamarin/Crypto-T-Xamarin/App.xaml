        <Style TargetType="Entry">
            <Setter Property="PlaceholderColor" Value="{
                    AppThemeBinding
                    Light=Gray,
                    Dark=LightGray
                }">
            </Setter>
            <Setter Property="TextColor" Value="{
                    AppThemeBinding
                    Light={StaticResource AppTextColorLight},
                    Dark={StaticResource AppTextColorDark}
                }">
            </Setter>
        </Style>
        
    </Application.Resources>
</Application>