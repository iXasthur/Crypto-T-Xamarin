<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crypto_T_Xamarin.lib.screens.auth.AuthPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Crypto-T-Xamarin" FontSize="Title" HorizontalOptions="Center" />
            <Entry x:Name="EmailEntry"
                   Text=""
                   Placeholder="Username" />
            <Entry x:Name="PasswordEntry"
                   Text=""
                   Placeholder="Password"
                   IsPassword="True" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                <Button Text="Sign In" Clicked="SignIn_OnClicked" HorizontalOptions="FillAndExpand" />
                <Button Text="Sign Up" Clicked="SignUp_OnClicked" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            <Label
                x:Name="SomethingWentWrongLabel"
                Text="Something went wrong"
                IsVisible="False"
                TextColor="Red"
                HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>